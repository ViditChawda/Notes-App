<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color"
    tools:context=".ui.Fragments.CreateNoteFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:id="@+id/editTitle"
            android:fontFamily="@font/poppins_light"
            android:textColorHint="@color/white"
            android:maxLines="1"
            android:hint="Title"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:id="@+id/editSubtitle"
            android:fontFamily="@font/poppins_light"
            android:textColorHint="@color/white"
            android:maxLines="1"
            android:hint="Subtitle "/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:layout_width="25dp"
                android:id="@+id/pGreen"
                android:layout_marginEnd="10dp"
                android:background="@drawable/green_dot"
                android:layout_height="25dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:layout_width="25dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/pYello"
                android:background="@drawable/yello_dot"
                android:layout_height="25dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:layout_width="25dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/pRed"
                android:background="@drawable/red_dot"
                android:layout_height="25dp"/>

        </LinearLayout>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:id="@+id/editNotes"
            android:fontFamily="@font/poppins_light"
            android:textColorHint="@color/white"
            android:hint="Notes"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:id="@+id/btnSaveNotes"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/ic_baseline_done_24"/>
</FrameLayout>